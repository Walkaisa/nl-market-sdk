{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"formatter": {
		"enabled": true,
		"lineWidth": 160,
		"indentWidth": 4,
		"indentStyle": "tab",
		"bracketSpacing": true
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off",
				"noConfusingVoidType": "off"
			},
			"style": {
				"noUselessElse": "off",
				"noNonNullAssertion": "off"
			},
			"complexity": {
				"noForEach": "off",
				"useLiteralKeys": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"trailingCommas": "none"
		}
	}
}
